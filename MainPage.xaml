<Page
    x:Class="ImplicitAnimations.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImplicitAnimations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dep="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <dep:NavigationView x:Name="NavView"
                        Loaded="NavView_Loaded"
                        AlwaysShowHeader="False"
                        ItemInvoked="NavView_ItemInvoked">
        <dep:NavigationView.MenuItems>
            <dep:NavigationViewItem Content="Page1" />
            <dep:NavigationViewItem Content="Page2" />
            <dep:NavigationViewItem Content="Page3" />
        </dep:NavigationView.MenuItems>

        <Frame x:Name="MainFrame"
               Navigated="MainFrame_Navigated"/>
    </dep:NavigationView>
</Page>
