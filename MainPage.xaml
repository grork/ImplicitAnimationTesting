<Page
    x:Class="ImplicitAnimations.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImplicitAnimations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView x:Name="NavView"
                        Loaded="NavView_Loaded"
                        AlwaysShowHeader="False"
                        IsBackButtonVisible="Collapsed"
                        ItemInvoked="NavView_ItemInvoked">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="TestPage" />
            <NavigationViewItem Content="CollectionPage" />
            <NavigationViewItem Content="CollectionPage1" />
            <NavigationViewItem Content="PDPPage" />
        </NavigationView.MenuItems>

        <Frame x:Name="MainFrame"
               Navigated="MainFrame_Navigated"
               Navigating="MainFrame_Navigating"/>
    </NavigationView>
</Page>
